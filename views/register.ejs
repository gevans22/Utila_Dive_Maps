<% layout('layout') -%>

<div class="row">
    <div class="span4 offset5" style="margin-top: 5%;">
      <div class="well">
        <legend>Create account for Utila Dive Maps</legend>
        <form name='newuser', action='/register' method='post' onsubmit="return validateForm()" accept-charset="UTF-8">

            <div id='noMatch' class="alert alert-error hidden">
                <a class="close" data-dismiss="alert" href="#">x</a>The passwords do not match. 
            </div>      
            <input class="span3" type='text' name='username' placeholder='Username'>
            <input class="span3" type='password' name='password' placeholder='Password'> 
            <input class="span3" type='password' name='password2' placeholder='Confirm Password'> 
            <input class="span3" type='text' name='viewers' placeholder='Viewers'> 
            <button class="btn-info btn" type="submit" value="Create User">Create User</button>      
        </form>    
      </div>
    </div>
</div>

<script>
validateForm = function(){
      p1 = document.forms['newuser']['password'].value
      p2 = document.forms['newuser']['password2'].value
      if(p1 != p2) { 
        $('#noMatch').removeClass('hidden'); 
        $('.close').on('click', function(){
          $('#noMatch').addClass('hidden');
        })
        return false; };
    }
</script>
