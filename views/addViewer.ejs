<% layout('layout') -%>

<div class="row">
    <div class="span4 offset5" style="margin-top: 5%;">
      <div class="well">
        <legend>Add viewer to account for Dive Maps</legend>
        <form name='newuser', action='/admin/addViewer' method='post' accept-charset="UTF-8">

            <div id='noMatch' class="alert alert-error hidden">
                <a class="close" data-dismiss="alert" href="#">x</a>The passwords do not match. 
            </div>      
            <input class="span3" type='text' name='username' placeholder='Username'>
            <input class="span3" type='text' name='viewerName' placeholder='ViewerName'> 
            <button class="btn-info btn" type="submit" value="Create User">Add Viewer to User</button>      
        </form> 
        <h4> Available Viewers </h4>
        <ul> <% for(var i = 0; i < viewers.length; i++) { %>
                <%= viewers[i] %> <br>
        <% } %>
        </ul>
      </div>
    </div>
</div>
